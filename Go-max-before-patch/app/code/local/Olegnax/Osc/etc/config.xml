                        <place_order_button_text_color>000000</place_order_button_text_color>
                        <place_order_button_hover_text_color>ffffff</place_order_button_hover_text_color>
                                                
                        <place_order_block_border_color>000000</place_order_block_border_color>
                        <place_order_block_border_width>0</place_order_block_border_width>
                        
                        <place_order_grandtotal_fontsize>18</place_order_grandtotal_fontsize>
                        <place_order_grandtotal_font_color>000000</place_order_grandtotal_font_color>                        
                    </place_order_app>
            

        </olegnax_appearance>


    </default>
</config>